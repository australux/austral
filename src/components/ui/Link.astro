---
const { title, href } = Astro.props;
const url = Astro.url;
const match = href === url.pathname;
---

<div>
    <a
        href={href}
        class=`inline-flex gap-2 items-center hover:opacity-100 ${match ? 'opacity-100' : 'opacity-60'}`
    >
        <div
            class=`w-[8px] h-[8px] rounded-full ${match? 'bg-orange-500' : 'bg-gray-600'}`
        >
        </div>
        <span
            class=`${match ? 'text-orange-500' : 'text-gray-300'} text-xl font-medium`
        >
            {title}
        </span>
    </a>
</div>
