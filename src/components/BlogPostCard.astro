---
interface Props {
    slug: string;
    src: string;
    alt: string;
    title: string;
}

const { slug, src, alt, title } = Astro.props;
---

<a href={`/posts/${slug}`}>
    <div class="flex flex-col items-center">
        <div class="max-w-[30rem]">
            <img
                src={src}
                alt={alt}
                class="rounded-xl aspect-video w-full h-full"
                loading="lazy"
            />
            <div class="flex items-start w-full p-4">
                <p class="text-2xl">{title}</p>
            </div>
        </div>
    </div>
</a>
