---
import Link from "./ui/Link.astro";
import LogoBrand from "./ui/LogoBrand.astro";
import LogoOutlineWhite from "./ui/LogoOutlineWhite.astro";
const url = Astro.url;
const match = url.pathname === "/";
---

<div class="flex flex-col h-full gap-4">
    <div class="self-start">
        <a href="/">
            {match ? <LogoBrand /> : <LogoOutlineWhite />}
        </a>
    </div>
    <div class="flex flex-col justify-between h-full pl-4">
        <div class="w-[5px] border-r-2 border-gray-600 h-full opacity-60"></div>
        <ol class="flex flex-col">
            <Link href="/about" title="about" />
            <div class="w-[5px] border-r-2 border-gray-600 h-6 opacity-60">
            </div>
            <Link href="/blog" title="blog" />
            <div class="w-[5px] border-r-2 border-gray-600 h-6 opacity-60">
            </div>
            <Link href="/projects" title="projects" />
        </ol>
    </div>
</div>
