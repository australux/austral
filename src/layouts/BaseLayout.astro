---
import Navbar from "@/components/Navbar.astro";
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body class="bg-[#101720] text-white font-chivo antialiased">
        <main
            class="flex flex-col md:grid md:grid-cols-[10.5rem_minmax(0,_1fr)] gap-2 md:gap-4 py-4 md:py-6 px-4 w-screen h-screen overflow-hidden relative"
        >
            <aside>
                <Navbar />
            </aside>
            <section
                class="flex flex-col items-center overflow-hidden relative h-full"
            >
                <slot />
            </section>
        </main>
        <style>
            @import url("https://fonts.googleapis.com/css2?family=Chivo+Mono:ital,wght@0,100..900;1,100..900&display=swap");
        </style>
    </body>
</html>
